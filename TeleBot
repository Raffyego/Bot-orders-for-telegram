import telebot

from telebot.types import InlineKeyboardMarkup, InlineKeyboardButton

TELEGRAM_TOKEN = "6133798912:AAGykITotsTNHDxCQA9SWT5fRpaQITgGWbo"

bot = telebot.TeleBot(TELEGRAM_TOKEN)

def start(message):

    bot.send_message(message.chat.id, "Ciao, questo Ã¨ il bot degli ordini ufficiale del gruppo @theblackshop2. Se sei qui per ordinare clicca il tasto ORDINA e non dimenticarti di seguirmi su Instagram cliccando il pulsante INSTAGRAM.", reply_markup=gen_markup())

def gen_markup():

    markup = InlineKeyboardMarkup()

    markup.row_width = 2

    markup.add(InlineKeyboardButton("INSTAGRAM", callback_data="call1"), InlineKeyboardButton("ORDINA", callback_data="call2"))

    return markup

@bot.callback_query_handler(func=lambda call: True)

def callback(call):

    if call.data == "call1":

        bot.send_message(call.message.chat.id, "https://instagram.com/the_black_shop____?igshid=ZDdkNTZiNTM")

    elif call.data == "call2":

        bot.answer_callback_query(call.id, "t.me/+hoBk1I07FBRjYmRk")

bot.enable_save_next_step_handlers(delay=2)

bot.load_next_step_handlers()

bot.polling()
